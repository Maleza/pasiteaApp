            </intent-filter>
        </activity>

        <!-- Main Activity (Login con Google) -->
        <activity android:name=".MainActivity" />

        <!-- Menu Activity -->
        <activity android:name=".MenuActivity" />
        <activity android:name=".AnimacionActivity" />
        <activity android:name=".TemporizadorActivity" />

    </application>

</manifest>